<?xml version="1.0" encoding="utf-8"?>
<tools:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Activities.FOSandRPDActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Программы дисциплин"
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/emptyListFosAndRpd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Для вашего направления подготовки не добавлены документы"
        android:textSize="18sp"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/listFosAndRpd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</tools:LinearLayout>